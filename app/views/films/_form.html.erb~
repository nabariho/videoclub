<%= form_for(@film) do |f| %>
  <% if @film.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@film.errors.count, "error") %> prohibited this film from being saved:</h2>

      <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.number_field :time %>
  </div>
  <div class="field">
    <%= f.label :rental_price %><br />
    <%= f.text_field :rental_price %>
  </div>
  <div class="field">
    <%= f.label :buy_price %><br />
    <%= f.text_field :buy_price %>
  </div>
  <div class="field">
    <%= f.label :sinopsis %><br />
    <%= f.text_area :sinopsis %>
  </div>
  <div class="field">
    <%= f.label :poster %><br />
    <%= f.file_field :poster %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
