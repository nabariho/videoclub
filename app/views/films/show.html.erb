<div class="row">
<p id="notice"><%= notice %></p>
<div class="span3" id="MovieInfo">
  <div class="ImageContainer"><%= image_tag @film.poster.url %></div>
  <div class="informacion" id="TableInfoMovie">
    <ul>
      <li> Año: <%= @film.year %></li>
      <li> Duración: <%= @film.time %> minutos</li>
      <li> Sinopsis:</li>
      <pre><%= @film.sinopsis %></pre>
    </ul>
  </div>
</div>
<div class="span7" id="MovieContainer">
  <h1 id="titulo_pelicula">
    <%= @film.title %>
  </h1> 
  <% if current_user and current_user.films.include?(@film) %>
       <%f=current_user.rents.find_by_film_id(@film)%>
       <% if f.rent %>
            <%if f.end_date >= Time.current() %>
		<%render '/films/film_sin_anuncios'%>
            <%else%>
		<%render '/films/film_con_anuncion'%>
            <%end%>             
		
	<%else%>
 		<%render '/films/film_sin_anuncios'%>
       <%end%>
  <%else%>
       <%render '/films/film_con_anuncion'%>
  <%end%>
  
  <div class="comments">
      <%= render "comments/comment" %>
      <%if current_user %>
        <%= render "comments/form" %>
      <%end%>
  </div>
</div>

<div id="GetMovie">

  <!-- <div class= "colorGrey">
    <button class="btn btn-large btn-danger btnPurchase">Comprar: <%= @film.buy_price %>€</button>

  </div> -->
  <button class="btn btn-large btn-danger btnPurchase">Comprar: <%= @film.buy_price %>€</button>
  <%= form_for ([@film, @rents]) do |f| %>
      <%= f.submit :class => 'btn btn-large btn-danger btnPurchase', :value => "Alquilar: "+@film.rental_price.to_s+"€"%>
  <%end%>
  <button class="btn btn-large btn-danger btnPurchase">Ver con Anuncios: Gratis</button>

  <!-- <div class= "colorGrey">
    <span><button class="btn btn-large btn-danger btnPurchase">Alquilar</button></span>
    <span><%= @film.rental_price %>€</span>
  </div> -->
  <!-- <div class= "colorGrey">
    <button class="btn btn-large btn-danger btnPurchase">Ver con Anuncios</button>
    Gratis
  </div> -->

</div>
