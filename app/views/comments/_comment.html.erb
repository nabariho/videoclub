<% @film.comments.each do |c| %>
   <% if c.user %>
      <div class="content">
         <%=c.user.username %>
         <%=c.comentario %>
            <% if user_signed_in? and (c.user == current_user or current_user.groups.find_by_name('admin')) %>
               <%= link_to 'Editar', edit_film_comment_path(@film, c) %>
               <%= link_to 'Eliminar', film_comment_path(@film, c), confirm: 'Â¿Seguro?', method: :delete %>
            <%end%>
      </div>
   <%end%>
<% end %>
