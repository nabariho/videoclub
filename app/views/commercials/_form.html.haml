= form_for @commercial do |f|
  -if @commercial.errors.any?
    .alert.alert-error
      %a.close{:href => "#", :"data-dismiss" => "alert"} Ã—
      %h4= "#{pluralize(@commercial.errors.count, "error")} prohibited this commercial from being saved:"

      %ul
        - @commercial.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'input-xxlarge'
  .control-group
    = f.label :file, :class => 'control-label'
    .controls
      = f.file_field :file, :class => 'input-xxlarge'

  .actions
    = f.submit :class => 'btn btn-primary'
