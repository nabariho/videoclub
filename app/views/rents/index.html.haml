.page-header

  %h1 Gestión Alquileres/Compras

%table.tabla
  %thead
    %tr
      %th Usuario
      %th Película
      %th Fecha Inicial
      %th Fecha de Fin
      %th Tipo
      %th
      %th

  %tbody
    - @rents.each do |rent|
      %tr
        %td= rent.user.username
        %td= rent.film.title
        %td= time_tag rent.start_date
        %td= time_tag rent.end_date
        - if rent.rent
          %td Alquiler
        -else
          %td Compra
        %td.btn-tabla= link_to 'Editar', edit_rent_path(rent.id), :class => 'btn btn-mini btn-blue'
        %td.btn-tabla= link_to 'Eliminar', rent_path(rent), :confirm => '¿Seguro que deseas eliminarlo?', :method => :delete, :class => 'btn btn-mini btn-blue'
