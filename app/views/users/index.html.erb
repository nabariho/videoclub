<h1>Listing films</h1>

<table class="tabla">
  <tr>
    <th>Username</th>
    <th>email</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td class="btn-tabla"><%= link_to 'Show', user, :class => 'btn btn-mini btn-blue' %></td>
    <td class="btn-tabla"><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-blue' %></td>
  </tr>
<% end %>
</table>

