<h2>Sign up</h2><br />

<div class="row">
<div class="span4">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :username, :class => "label label-info"%>
  <%= f.text_field :username, :class => "input_form", :placeholder => "USERNAME" %>


  <%= f.label :email, :class => "label label-info"%>
  <%= f.email_field :email, :class => "input_form", :placeholder => "EMAIL" %>

  <%= f.label :password, :class => "label label-info"%>
  <%= f.password_field :password, :class => "input_form", :placeholder => "PASSWORD"%>

  <%= f.label :password_confirmation, :class => "label label-info"%>
  <%= f.password_field :password_confirmation, :class => "input_form", :placeholder => "PASSWORD COMFIRMATION" %><br />

    <%= f.submit "Sign up", :class => "btn btn-min btn-blue" %>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
<div class="span8"><%= image_tag("robot_reg.png") %></div>
</div>
